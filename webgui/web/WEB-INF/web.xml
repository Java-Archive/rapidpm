<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>VaadinApplication</display-name>
    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>

    <servlet>
        <servlet-name>BaseVaadin</servlet-name>
        <servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
        <!--<servlet-class>org.rapidpm.webapp.vaadin.BaseApplicationServlet</servlet-class>-->
        <init-param>
            <param-name>root</param-name>
            <param-value>org.rapidpm.webapp.vaadin.MainRoot</param-value>
            <!--<param-value>org.rapidpm.webapp.vaadin.MainApplication</param-value>-->
        </init-param>
        <init-param>
            <param-name>widgetset</param-name>
            <param-value>org.rapidpm.webapp.vaadin.MainWidgetset</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>BaseVaadin</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BaseVaadin</servlet-name>
        <url-pattern>/VAADIN/*</url-pattern>
    </servlet-mapping>


</web-app>
