    <target name="compile.module.webgui.production" depends="compile.module.ejb"
            description="Compile module webgui; production classes">
        <mkdir dir="${webgui.output.dir}"/>
        <javac destdir="${webgui.output.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true"
               executable="${module.jdk.bin.webgui}/javac" includeantruntime="false" encoding="utf-8">
            <compilerarg line="${compiler.args.webgui}"/>
            <bootclasspath refid="webgui.module.bootclasspath"/>
            <classpath refid="webgui.module.production.classpath"/>
            <src refid="webgui.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.webgui"/>
        </javac>

        <copy todir="${webgui.output.dir}">
            <fileset dir="${module.webgui.basedir}/webgui/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.webgui.tests" depends="compile.module.webgui.production"
            description="compile module webgui; test classes" unless="skip.tests"/>

    <target name="clean.module.webgui" description="cleanup module">
        <delete dir="${webgui.output.dir}"/>
        <delete dir="${webgui.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
        <mkdir description="create test result dir" dir="test-reports"/>
    </target>

    <target name="clean" depends="clean.module.base, clean.module.ejb, clean.module.webgui" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.base, compile.module.ejb, compile.module.webgui"
            description="build all modules"/>

    <target name="init.artifacts">
        <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
        <property name="artifact.output.rapidpm" value="${basedir}/out/artifacts/rapidpm"/>
        <mkdir dir="${artifacts.temp.dir}"/>
        <property name="temp.jar.path.rapidpm.war" value="${artifacts.temp.dir}/rapidpm.war"/>
    </target>

    <target name="artifact.rapidpm"
            depends="init.artifacts, compile.module.base, compile.module.ejb, compile.module.webgui"
            description="Build &#39;rapidpm&#39; artifact">
        <property name="artifact.temp.output.rapidpm" value="${artifacts.temp.dir}/rapidpm"/>
        <mkdir dir="${artifact.temp.output.rapidpm}"/>
        <zip destfile="${temp.jar.path.rapidpm.war}">
            <zipfileset dir="${base.output.dir}" prefix="WEB-INF/classes"/>
            <zipfileset file="${basedir}/base/src/META-INF/persistence.xml" prefix="WEB-INF/classes/META-INF"/>
            <zipfileset dir="${ejb.output.dir}" prefix="WEB-INF/classes"/>
            <zipfileset dir="${webgui.output.dir}" prefix="WEB-INF/classes"/>
            <zipfileset file="${basedir}/lib/module/org/rapidpm/vaadin/main/vaadin-7.0.0.alpha3.jar"
                        prefix="WEB-INF/lib"/>
            <zipfileset file="${basedir}/ejb/META-INF/ejb-jar.xml" prefix="META-INF"/>
            <zipfileset dir="${basedir}/webgui/web"/>
            <zipfileset file="${basedir}/webgui/web/WEB-INF/web.xml" prefix="WEB-INF"/>
            <zipfileset file="${basedir}/webgui/META-INF/MANIFEST.MF" prefix="META-INF"/>
            <zipfileset dir="${basedir}/webgui/web/VAADIN"/>
            <zipfileset dir="${basedir}/webgui/web/VAADIN/widgetsets" prefix="VAADIN/widgetsets"/>
            <zipfileset dir="${basedir}/webgui/web/VAADIN/themes" prefix="VAADIN/themes"/>
        </zip>
        <copy file="${temp.jar.path.rapidpm.war}" tofile="${artifact.temp.output.rapidpm}/rapidpm.war"/>
    </target>

    <target name="build.all.artifacts" depends="artifact.rapidpm" description="Build all artifacts">
        <mkdir dir="${artifact.output.rapidpm}"/>
        <copy todir="${artifact.output.rapidpm}">
            <fileset dir="${artifact.temp.output.rapidpm}"/>
        </copy>

        <!-- Delete temporary files -->
        <delete dir="${artifacts.temp.dir}"/>
    </target>

    <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>